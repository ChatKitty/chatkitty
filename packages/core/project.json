{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core/src",
  "projectType": "library",
  "targets": {
    "prepare": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "npx semantic-release-plus --extends ./packages/core/pre-release.config.js"
      }
    },
    "build": {
      "builder": "nx:run-commands",
      "options": {
        "commands": ["nx build-bundle core", "nx build-types core"]
      }
    },
    "build-bundle": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "webpackConfig": "packages/core/webpack.config.js",
        "isolatedConfig": true,
        "outputPath": "dist/packages/core",
        "main": "packages/core/src/index.ts",
        "tsConfig": "packages/core/tsconfig.lib.json",
        "assets": [
          {
            "glob": "packages/core/*.md",
            "input": ".",
            "output": "."
          }
        ],
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "generatePackageJson": true
      }
    },
    "build-types": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --project packages/core/tsconfig.lib.json"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/core/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/core/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "doc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typedoc --options ./packages/core/typedoc.json"
      }
    },
    "prepare-release": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "node tools/scripts/version.mjs core {args.version}"
      }
    },
    "release": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "npx semantic-release-plus --extends ./packages/core/release.config.js",
        "parallel": false
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "prepare"
        },
        {
          "projects": "self",
          "target": "build"
        }
      ]
    }
  },
  "tags": []
}
