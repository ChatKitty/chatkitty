{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core/src",
  "projectType": "library",
  "targets": {
    "prepare": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "npx semantic-release-plus --extends ./packages/core/pre-release.config.js"
      }
    },
    "build": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/core",
        "tsConfig": "packages/core/tsconfig.lib.json",
        "project": "packages/core/package.json",
        "entryFile": "packages/core/src/index.ts",
        "rollupConfig": [
          "@nrwl/react/plugins/bundle-rollup",
          "bundle-rollup.cjs"
        ],
        "compiler": "babel",
        "assets": [
          {
            "glob": "packages/core/*.md",
            "input": ".",
            "output": "."
          }
        ],
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "generatePackageJson": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/core/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/core"],
      "options": {
        "jestConfig": "packages/core/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "doc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typedoc --options ./packages/core/typedoc.json"
      }
    },
    "prepare-release": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "node tools/scripts/version.mjs core {args.version}"
      }
    },
    "release": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "npx semantic-release-plus --extends ./packages/core/release.config.js",
        "parallel": false
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "prepare"
        },
        {
          "projects": "self",
          "target": "build"
        }
      ]
    }
  },
  "tags": []
}
